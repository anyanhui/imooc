extends ../layout

block content
    .container#container
        .row
            .col-md-5
                form(method="post", action="/user/signup")
                    .modal-body 
                        .form-group
                            label(for="signupName") 用户名
                            input#signupName.form-control(name="user[name]", type="text" value=user.name)
                        .form-group
                            label(for="signupPassword") 密码
                            input#signupPassword.form-control(name="user[password]", type="password")
                        if user
                            if user.role > 10
                                .form-group
                                    label(for="signupRole") 角色
                                    input#signupRole.form-control(name="user[role]", type="text" value=user.role)
                    .modal-footer
                        button.btn.btn-success(type="submit") 提交