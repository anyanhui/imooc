extends ../layout

block content
    .container#container
        .row
            table.table.table-hover.table-bordered
                thead
                    tr
                        th 用户名
                        th 录入时间
                        th 修改
                        th 删除
                tbody
                    each item in users
                        tr(class="item-id-#{item._id}")
                            td #{item.name}
                            td #{moment(item.meta.updateAt).format('MM/DD/YYYY')}
                            td: a(target="_blank",href="../user/update/#{item._id}") 修改
                            td
                                button.btn.btn-danger.userDel(type="button", data-id="#{item._id}") 删除
    script(src="/js/admin.js")
